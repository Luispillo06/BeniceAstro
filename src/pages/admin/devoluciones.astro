---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

// Proteger ruta
const { data: { session } } = await supabase.auth.getSession();
if (!session) return Astro.redirect('/login');

const { data: userData } = await supabase
  .from('users')
  .select('role')
  .eq('id', session.user.id)
  .single();

if (!userData || userData.role !== 'admin') {
  return Astro.redirect('/');
}

// Obtener devoluciones
const { data: returns } = await supabase
  .from('returns')
  .select(`
    *,
    orders (
      id,
      total,
      created_at
    ),
    users (
      email,
      full_name
    )
  `)
  .order('created_at', { ascending: false });

const statusColors: Record<string, string> = {
  solicitada: 'bg-yellow-100 text-yellow-800',
  aprobada: 'bg-green-100 text-green-800',
  rechazada: 'bg-red-100 text-red-800',
  completada: 'bg-purple-100 text-purple-800'
};
---

<Layout title="Devoluciones - Admin" hideNewsletterPopup={true}>
  <div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
      
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <nav class="text-sm text-gray-500 mb-2">
            <a href="/admin" class="hover:text-yellow-600">Dashboard</a>
            <span class="mx-2">/</span>
            <span class="text-gray-800">Devoluciones</span>
          </nav>
          <h1 class="text-3xl font-bold text-gray-800">Gestión de Devoluciones</h1>
        </div>
      </div>

      <!-- Lista de devoluciones -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        {returns && returns.length > 0 ? (
          <table class="w-full">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Pedido</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Motivo</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Reembolso</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {returns.map((ret: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4">
                    <span class="font-mono text-sm">#{ret.id.substring(0, 8)}</span>
                  </td>
                  <td class="px-6 py-4">
                    <a href={`/admin/pedidos?search=${ret.order_id}`} class="text-yellow-600 hover:underline font-mono text-sm">
                      #{ret.orders?.id.substring(0, 8)}
                    </a>
                  </td>
                  <td class="px-6 py-4">
                    <p class="font-medium">{ret.users?.full_name || 'Sin nombre'}</p>
                    <p class="text-sm text-gray-500">{ret.users?.email}</p>
                  </td>
                  <td class="px-6 py-4 max-w-xs">
                    <p class="truncate" title={ret.reason}>{ret.reason}</p>
                  </td>
                  <td class="px-6 py-4">
                    <select 
                      class="return-status px-3 py-1 rounded-full text-xs font-medium border-0"
                      data-return-id={ret.id}
                      data-current-status={ret.status}
                    >
                      <option value="solicitada" selected={ret.status === 'solicitada'}>Solicitada</option>
                      <option value="aprobada" selected={ret.status === 'aprobada'}>Aprobada</option>
                      <option value="rechazada" selected={ret.status === 'rechazada'}>Rechazada</option>
                      <option value="completada" selected={ret.status === 'completada'}>Completada</option>
                    </select>
                  </td>
                  <td class="px-6 py-4">
                    {ret.refund_amount ? (
                      <span class="text-green-600 font-medium">{ret.refund_amount.toFixed(2)}€</span>
                    ) : (
                      <span class="text-gray-400">-</span>
                    )}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    {new Date(ret.created_at).toLocaleDateString('es-ES')}
                  </td>
                  <td class="px-6 py-4">
                    <button 
                      class="view-return p-2 text-blue-600 hover:bg-blue-50 rounded-lg"
                      data-return={JSON.stringify(ret)}
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        ) : (
          <div class="p-12 text-center">
            <h3 class="text-xl font-bold text-gray-800 mb-2">No hay devoluciones</h3>
            <p class="text-gray-500">Aún no se han solicitado devoluciones</p>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Modal de detalle -->
  <div id="return-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl max-w-lg w-full p-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-bold">Detalle de Devolución</h3>
        <button id="close-modal" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div id="modal-content"></div>
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    // Ver detalle
    document.querySelectorAll('.view-return').forEach(btn => {
      btn.addEventListener('click', () => {
        const data = JSON.parse((btn as HTMLElement).dataset.return || '{}');
        const modal = document.getElementById('return-modal');
        const content = document.getElementById('modal-content');
        
        content!.innerHTML = `
          <div class="space-y-4">
            <div>
              <p class="text-sm text-gray-500">Cliente</p>
              <p class="font-medium">${data.users?.full_name || 'Sin nombre'}</p>
              <p class="text-sm text-gray-600">${data.users?.email}</p>
            </div>
            <div>
              <p class="text-sm text-gray-500">Motivo</p>
              <p class="text-gray-800">${data.reason}</p>
            </div>
            ${data.admin_notes ? `
              <div>
                <p class="text-sm text-gray-500">Notas del Admin</p>
                <p class="text-gray-800">${data.admin_notes}</p>
              </div>
            ` : ''}
            <div class="pt-4 border-t">
              <label class="block text-sm font-medium text-gray-700 mb-2">Importe a reembolsar</label>
              <input type="number" step="0.01" id="refund-amount" value="${data.refund_amount || data.orders?.total || ''}" 
                class="w-full px-3 py-2 border rounded-lg" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Notas administrativas</label>
              <textarea id="admin-notes" class="w-full px-3 py-2 border rounded-lg" rows="3">${data.admin_notes || ''}</textarea>
            </div>
            <button id="save-return" data-id="${data.id}" class="w-full py-3 bg-yellow-500 text-white font-bold rounded-lg hover:bg-yellow-600">
              Guardar cambios
            </button>
          </div>
        `;
        
        modal?.classList.remove('hidden');

        document.getElementById('save-return')?.addEventListener('click', async () => {
          const refundAmount = (document.getElementById('refund-amount') as HTMLInputElement).value;
          const adminNotes = (document.getElementById('admin-notes') as HTMLTextAreaElement).value;
          
          const { error } = await supabase
            .from('returns')
            .update({
              refund_amount: parseFloat(refundAmount) || null,
              admin_notes: adminNotes,
              updated_at: new Date().toISOString()
            })
            .eq('id', data.id);

          if (!error) {
            window.location.reload();
          } else {
            alert('Error al guardar');
          }
        });
      });
    });

    // Cerrar modal
    document.getElementById('close-modal')?.addEventListener('click', () => {
      document.getElementById('return-modal')?.classList.add('hidden');
    });

    // Cambiar estado
    document.querySelectorAll('.return-status').forEach(select => {
      select.addEventListener('change', async (e) => {
        const el = e.target as HTMLSelectElement;
        const returnId = el.dataset.returnId;
        const newStatus = el.value;

        const { error } = await supabase
          .from('returns')
          .update({ status: newStatus, updated_at: new Date().toISOString() })
          .eq('id', returnId);

        if (error) {
          alert('Error al actualizar estado');
        }
      });
    });
  </script>
</Layout>
