---
import Layout from '../../layouts/Layout.astro';
import OfertasToggle from '../../components/OfertasToggle.astro';
import { createServerClient } from '../../lib/supabase';

// Proteger ruta - solo admins
const supabase = createServerClient(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();

if (!session) {
  return Astro.redirect('/login');
}

const { data: userData } = await supabase
  .from('users')
  .select('role')
  .eq('id', session.user.id)
  .single();

if (!userData || userData.role !== 'admin') {
  return Astro.redirect('/');
}

// Obtener conteos básicos para SSR
const { count: totalProducts } = await supabase
  .from('products')
  .select('*', { count: 'exact', head: true });

const { count: totalOrders } = await supabase
  .from('orders')
  .select('*', { count: 'exact', head: true });

const { count: totalUsers } = await supabase
  .from('users')
  .select('*', { count: 'exact', head: true });
---

<Layout title="Dashboard - Panel de Administración">
  <div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
      
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">Dashboard Venice</h1>
          <p class="text-gray-600 mt-1">Bienvenido al panel de administración</p>
        </div>
        <div class="flex gap-3">
          <a href="/admin/productos" class="btn bg-purple-600 text-white hover:bg-purple-700">
            Gestionar Productos
          </a>
          <a href="/admin/productos/nuevo" class="btn btn-primary">
            + Nuevo Producto
          </a>
        </div>
      </div>

      <!-- KPIs Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Ventas del Mes -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-green-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Ventas del Mes</p>
              <p class="text-3xl font-bold text-gray-800" id="kpi-sales">
                <span class="animate-pulse bg-gray-200 rounded w-24 h-8 inline-block"></span>
              </p>
            </div>
            <div class="p-3 bg-green-100 rounded-full">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <p class="text-sm text-green-600 mt-2" id="kpi-orders-count">Cargando...</p>
        </div>

        <!-- Pedidos Pendientes -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-yellow-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Pedidos Pendientes</p>
              <p class="text-3xl font-bold text-gray-800" id="kpi-pending">
                <span class="animate-pulse bg-gray-200 rounded w-16 h-8 inline-block"></span>
              </p>
            </div>
            <div class="p-3 bg-yellow-100 rounded-full">
              <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <p class="text-sm text-yellow-600 mt-2">Requieren atención</p>
        </div>

        <!-- Nuevos Clientes -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-blue-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Nuevos Clientes (Mes)</p>
              <p class="text-3xl font-bold text-gray-800" id="kpi-customers">
                <span class="animate-pulse bg-gray-200 rounded w-16 h-8 inline-block"></span>
              </p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          </div>
          <p class="text-sm text-blue-600 mt-2">Total: {totalUsers} usuarios</p>
        </div>

        <!-- Stock Bajo -->
        <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-red-500">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-500">Stock Bajo</p>
              <p class="text-3xl font-bold text-gray-800" id="kpi-lowstock">
                <span class="animate-pulse bg-gray-200 rounded w-16 h-8 inline-block"></span>
              </p>
            </div>
            <div class="p-3 bg-red-100 rounded-full">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
          </div>
          <p class="text-sm text-red-600 mt-2">Productos con &lt;10 uds</p>
        </div>
      </div>

      <!-- Gráfico y Tablas -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Gráfico de Ventas -->
        <div class="lg:col-span-2 bg-white rounded-xl shadow-sm p-6">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-lg font-semibold text-gray-800">Ventas Últimos 7 Días</h2>
            <span class="text-sm text-gray-500" id="chart-total">Cargando...</span>
          </div>
          <div class="h-64">
            <canvas id="salesChart"></canvas>
          </div>
        </div>

        <!-- Producto más vendido -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <h2 class="text-lg font-semibold text-gray-800 mb-4">Producto Más Vendido</h2>
          <div id="top-product" class="flex flex-col items-center text-center py-4">
            <div class="animate-pulse bg-gray-200 rounded w-32 h-32 mb-4"></div>
            <span class="text-gray-400">Cargando...</span>
          </div>
        </div>
      </div>

      <!-- Segunda fila: Stock bajo y Últimos pedidos -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mt-8">
        
        <!-- Stock Bajo -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-gray-800">Productos con Stock Bajo</h2>
            <a href="/admin/productos" class="text-sm text-purple-600 hover:underline">Ver todos</a>
          </div>
          <div id="low-stock-list" class="space-y-3">
            <div class="animate-pulse space-y-3">
              <div class="h-12 bg-gray-200 rounded"></div>
              <div class="h-12 bg-gray-200 rounded"></div>
              <div class="h-12 bg-gray-200 rounded"></div>
            </div>
          </div>
        </div>

        <!-- Últimos Pedidos -->
        <div class="bg-white rounded-xl shadow-sm p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-gray-800">Últimos Pedidos</h2>
            <a href="/admin/pedidos" class="text-sm text-purple-600 hover:underline">Ver todos</a>
          </div>
          <div id="recent-orders-list" class="space-y-3">
            <div class="animate-pulse space-y-3">
              <div class="h-12 bg-gray-200 rounded"></div>
              <div class="h-12 bg-gray-200 rounded"></div>
              <div class="h-12 bg-gray-200 rounded"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Accesos Rápidos -->
      <div class="mt-8 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Accesos Rápidos</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/admin/productos" class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg hover:bg-purple-50 transition-colors">
            <span class="w-8 h-8 flex items-center justify-center bg-purple-100 rounded-lg">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
            </span>
            <div>
              <p class="font-medium text-gray-800">Productos</p>
              <p class="text-sm text-gray-500">{totalProducts} total</p>
            </div>
          </a>
          <a href="/admin/productos/nuevo" class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg hover:bg-purple-50 transition-colors">
            <span class="w-8 h-8 flex items-center justify-center bg-purple-100 rounded-lg">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
            </span>
            <div>
              <p class="font-medium text-gray-800">Nuevo Producto</p>
              <p class="text-sm text-gray-500">Añadir al catálogo</p>
            </div>
          </a>
          <a href="/admin/pedidos" class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg hover:bg-orange-50 transition-colors">
            <span class="w-8 h-8 flex items-center justify-center bg-orange-100 rounded-lg">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
            </span>
            <div>
              <p class="font-medium text-gray-800">Pedidos</p>
              <p class="text-sm text-gray-500">Gestionar envíos</p>
            </div>
          </a>
          <a href="/admin/facturas" class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg hover:bg-purple-50 transition-colors">
            <span class="w-8 h-8 flex items-center justify-center bg-purple-100 rounded-lg">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
            </span>
            <div>
              <p class="font-medium text-gray-800">Facturas</p>
              <p class="text-sm text-gray-500">Ver facturación</p>
            </div>
          </a>
          <a href="/admin/devoluciones" class="flex items-center gap-3 p-4 bg-gray-50 rounded-lg hover:bg-orange-50 transition-colors">
            <span class="w-8 h-8 flex items-center justify-center bg-orange-100 rounded-lg">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path></svg>
            </span>
            <div>
              <p class="font-medium text-gray-800">Devoluciones</p>
              <p class="text-sm text-gray-500">Gestionar devoluciones</p>
            </div>
          </a>
        </div>
      </div>

      <!-- Toggle de Ofertas Flash -->
      <div class="mt-8">
        <OfertasToggle />
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Cargar datos de analytics
    async function loadAnalytics() {
      try {
        const response = await fetch('/api/admin/analytics');
        const data = await response.json();

        // Actualizar KPIs
        document.getElementById('kpi-sales')!.textContent = `${data.kpis.totalSalesMonth}€`;
        document.getElementById('kpi-orders-count')!.textContent = `${data.kpis.totalOrdersMonth} pedidos este mes`;
        document.getElementById('kpi-pending')!.textContent = data.kpis.pendingOrders;
        document.getElementById('kpi-customers')!.textContent = data.kpis.newCustomersMonth;
        document.getElementById('kpi-lowstock')!.textContent = data.kpis.lowStockCount;

        // Producto más vendido
        const topProductDiv = document.getElementById('top-product');
        if (data.kpis.topProduct) {
          topProductDiv!.innerHTML = `
            <div class="w-16 h-16 mb-4 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <p class="font-bold text-gray-800 text-lg">${data.kpis.topProduct.name}</p>
            <p class="text-purple-600 font-medium">${data.kpis.topProduct.quantity} unidades vendidas</p>
          `;
        } else {
          topProductDiv!.innerHTML = `
            <div class="w-16 h-16 mb-4 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
            </div>
            <p class="text-gray-500">Sin datos de ventas este mes</p>
          `;
        }

        // Total del gráfico
        const chartTotal = data.chart.data.reduce((a: number, b: number) => a + b, 0);
        document.getElementById('chart-total')!.textContent = `Total: ${chartTotal.toFixed(2)}€`;

        // Crear gráfico
        const ctx = document.getElementById('salesChart') as HTMLCanvasElement;
        new (window as any).Chart(ctx, {
          type: 'bar',
          data: {
            labels: data.chart.labels,
            datasets: [{
              label: 'Ventas (€)',
              data: data.chart.data,
              backgroundColor: 'rgba(126, 34, 206, 0.5)',
              borderColor: 'rgb(126, 34, 206)',
              borderWidth: 2,
              borderRadius: 8
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  callback: function(value: number) {
                    return value + '€';
                  }
                }
              }
            }
          }
        });

        // Stock bajo
        const lowStockList = document.getElementById('low-stock-list');
        if (data.lowStockProducts.length > 0) {
          lowStockList!.innerHTML = data.lowStockProducts.map((product: any) => `
            <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
              <div>
                <p class="font-medium text-gray-800">${product.name}</p>
              </div>
              <span class="px-3 py-1 text-sm font-bold ${product.stock === 0 ? 'bg-red-200 text-red-800' : 'bg-yellow-200 text-yellow-800'} rounded-full">
                ${product.stock} uds
              </span>
            </div>
          `).join('');
        } else {
          lowStockList!.innerHTML = `
            <div class="text-center py-6 text-gray-500">
              <svg class="w-8 h-8 mx-auto text-purple-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              <p class="mt-2">Todo el stock está bien</p>
            </div>
          `;
        }

        // Últimos pedidos
        const ordersListDiv = document.getElementById('recent-orders-list');
        if (data.recentOrders.length > 0) {
          ordersListDiv!.innerHTML = data.recentOrders.map((order: any) => `
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div>
                <p class="font-medium text-gray-800">#${order.id.slice(0, 8)}</p>
                <p class="text-sm text-gray-500">${order.users?.email || 'Cliente'}</p>
              </div>
              <div class="text-right">
                <p class="font-bold text-gray-800">${order.total}€</p>
                <span class="px-2 py-0.5 text-xs rounded ${
                  order.status === 'entregado' ? 'bg-green-100 text-green-800' :
                  order.status === 'enviado' ? 'bg-blue-100 text-blue-800' :
                  order.status === 'pagado' ? 'bg-yellow-100 text-yellow-800' :
                  order.status === 'cancelado' ? 'bg-red-100 text-red-800' :
                  'bg-gray-100 text-gray-800'
                }">${order.status}</span>
              </div>
            </div>
          `).join('');
        } else {
          ordersListDiv!.innerHTML = `
            <div class="text-center py-6 text-gray-500">
              <svg class="w-8 h-8 mx-auto text-purple-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
              <p class="mt-2">No hay pedidos recientes</p>
            </div>
          `;
        }

      } catch (error) {
        console.error('Error cargando analytics:', error);
      }
    }

    loadAnalytics();
  </script>
</Layout>
