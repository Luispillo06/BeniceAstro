---
import Layout from '../../layouts/Layout.astro';
import { createServerClient } from '../../lib/supabase';

// Proteger ruta
const supabase = createServerClient(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();
if (!session) return Astro.redirect('/login');

const { data: userData } = await supabase
  .from('users')
  .select('role')
  .eq('id', session.user.id)
  .single();

if (!userData || userData.role !== 'admin') {
  return Astro.redirect('/');
}

// Obtener parÃ¡metros de filtro
const url = new URL(Astro.request.url);
const statusFilter = url.searchParams.get('status') || '';
const page = parseInt(url.searchParams.get('page') || '1');
const limit = 20;
const offset = (page - 1) * limit;

// Construir query
let query = supabase
  .from('orders')
  .select(`
    *,
    users (
      email,
      full_name
    ),
    order_items (
      id,
      quantity,
      price,
      products (
        name,
        image_url
      )
    )
  `, { count: 'exact' });

if (statusFilter) {
  query = query.eq('status', statusFilter);
}

const { data: orders, count } = await query
  .order('created_at', { ascending: false })
  .range(offset, offset + limit - 1);

const totalPages = Math.ceil((count || 0) / limit);

// Conteos por estado
const { data: statusCounts } = await supabase.rpc('get_order_status_counts');

const counts = {
  total: count || 0,
  pendiente: 0,
  pagado: 0,
  enviado: 0,
  entregado: 0,
  cancelado: 0
};

if (statusCounts) {
  statusCounts.forEach((s: any) => {
    counts[s.status as keyof typeof counts] = s.count;
  });
}

const statusColors: Record<string, string> = {
  pendiente: 'bg-yellow-100 text-yellow-800',
  pagado: 'bg-green-100 text-green-800',
  enviado: 'bg-blue-100 text-blue-800',
  entregado: 'bg-purple-100 text-purple-800',
  cancelado: 'bg-red-100 text-red-800'
};

const statusIcons: Record<string, string> = {
  pendiente: 'â³',
  pagado: 'âœ…',
  enviado: 'ğŸšš',
  entregado: 'ğŸ“¦',
  cancelado: 'âŒ'
};
---

<Layout title="Pedidos - Admin" hideNewsletterPopup={true}>
  <div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
      
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <div>
          <nav class="text-sm text-gray-500 mb-2">
            <a href="/admin" class="hover:text-purple-700">Dashboard</a>
            <span class="mx-2">/</span>
            <span class="text-gray-800">Pedidos</span>
          </nav>
          <h1 class="text-3xl font-bold text-gray-800">ğŸ“¦ GestiÃ³n de Pedidos</h1>
        </div>
      </div>

      <!-- Filtros por estado -->
      <div class="flex flex-wrap gap-3 mb-6">
        <a 
          href="/admin/pedidos" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${!statusFilter ? 'bg-purple-700 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          Todos ({counts.total})
        </a>
        <a 
          href="/admin/pedidos?status=pendiente" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${statusFilter === 'pendiente' ? 'bg-orange-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          â³ Pendientes ({counts.pendiente})
        </a>
        <a 
          href="/admin/pedidos?status=pagado" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${statusFilter === 'pagado' ? 'bg-green-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          âœ… Pagados ({counts.pagado})
        </a>
        <a 
          href="/admin/pedidos?status=enviado" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${statusFilter === 'enviado' ? 'bg-blue-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          ğŸšš Enviados ({counts.enviado})
        </a>
        <a 
          href="/admin/pedidos?status=entregado" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${statusFilter === 'entregado' ? 'bg-purple-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          ğŸ“¦ Entregados ({counts.entregado})
        </a>
        <a 
          href="/admin/pedidos?status=cancelado" 
          class={`px-4 py-2 rounded-full font-medium transition-colors ${statusFilter === 'cancelado' ? 'bg-red-500 text-white' : 'bg-white text-gray-700 hover:bg-gray-100'}`}
        >
          âŒ Cancelados ({counts.cancelado})
        </a>
      </div>

      <!-- Lista de pedidos -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        {orders && orders.length > 0 ? (
          <div class="divide-y divide-gray-100">
            {orders.map((order: any) => (
              <div class="p-6 hover:bg-gray-50 transition-colors">
                <div class="flex items-start justify-between">
                  <!-- Info principal -->
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded">
                        #{order.id.substring(0, 8)}
                      </span>
                      <span class={`px-3 py-1 rounded-full text-xs font-medium ${statusColors[order.status]}`}>
                        {statusIcons[order.status]} {order.status.charAt(0).toUpperCase() + order.status.slice(1)}
                      </span>
                      <span class="text-sm text-gray-500">
                        {new Date(order.created_at).toLocaleDateString('es-ES', {
                          day: '2-digit',
                          month: 'short',
                          year: 'numeric',
                          hour: '2-digit',
                          minute: '2-digit'
                        })}
                      </span>
                    </div>

                    <div class="flex items-center gap-4">
                      <div>
                        <p class="font-medium text-gray-800">
                          {order.users?.full_name || 'Usuario'}
                        </p>
                        <p class="text-sm text-gray-500">{order.users?.email}</p>
                      </div>
                    </div>

                    <!-- Items del pedido -->
                    <div class="flex gap-2 mt-3">
                      {order.order_items?.slice(0, 4).map((item: any) => (
                        <div class="w-12 h-12 bg-gray-100 rounded-lg overflow-hidden" title={item.products?.name}>
                          <img 
                            src={item.products?.image_url || 'https://via.placeholder.com/50'} 
                            alt={item.products?.name}
                            class="w-full h-full object-cover"
                          />
                        </div>
                      ))}
                      {order.order_items?.length > 4 && (
                        <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center text-sm text-gray-600">
                          +{order.order_items.length - 4}
                        </div>
                      )}
                    </div>
                  </div>

                  <!-- Precio y acciones -->
                  <div class="text-right">
                    <p class="text-2xl font-bold text-gray-800">{order.total?.toFixed(2)}â‚¬</p>
                    {order.discount_amount > 0 && (
                      <p class="text-sm text-green-600">-{order.discount_amount.toFixed(2)}â‚¬ dto.</p>
                    )}
                    
                    <!-- Cambiar estado -->
                    <div class="mt-4">
                      <select 
                        class="status-select px-3 py-2 border border-gray-200 rounded-lg text-sm focus:ring-2 focus:ring-purple-400"
                        data-order-id={order.id}
                        data-current-status={order.status}
                      >
                        <option value="pendiente" selected={order.status === 'pendiente'}>â³ Pendiente</option>
                        <option value="pagado" selected={order.status === 'pagado'}>âœ… Pagado</option>
                        <option value="enviado" selected={order.status === 'enviado'}>ğŸšš Enviado</option>
                        <option value="entregado" selected={order.status === 'entregado'}>ğŸ“¦ Entregado</option>
                        <option value="cancelado" selected={order.status === 'cancelado'}>âŒ Cancelado</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="p-12 text-center">
            <div class="text-6xl mb-4">ğŸ“¦</div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">No hay pedidos</h3>
            <p class="text-gray-500">
              {statusFilter ? `No hay pedidos con estado "${statusFilter}"` : 'AÃºn no se han realizado pedidos'}
            </p>
          </div>
        )}
      </div>

      <!-- PaginaciÃ³n -->
      {totalPages > 1 && (
        <div class="flex justify-center gap-2 mt-6">
          {page > 1 && (
            <a 
              href={`/admin/pedidos?page=${page - 1}${statusFilter ? `&status=${statusFilter}` : ''}`}
              class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50"
            >
              â† Anterior
            </a>
          )}
          
          <span class="px-4 py-2 text-gray-600">
            PÃ¡gina {page} de {totalPages}
          </span>
          
          {page < totalPages && (
            <a 
              href={`/admin/pedidos?page=${page + 1}${statusFilter ? `&status=${statusFilter}` : ''}`}
              class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50"
            >
              Siguiente â†’
            </a>
          )}
        </div>
      )}
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    // Cambiar estado de pedido
    document.querySelectorAll('.status-select').forEach(select => {
      select.addEventListener('change', async (e) => {
        const el = e.target as HTMLSelectElement;
        const orderId = el.dataset.orderId;
        const newStatus = el.value;
        const currentStatus = el.dataset.currentStatus;

        if (newStatus === currentStatus) return;

        if (!confirm(`Â¿Cambiar estado del pedido a "${newStatus}"?`)) {
          el.value = currentStatus!;
          return;
        }

        try {
          const { error } = await supabase
            .from('orders')
            .update({ 
              status: newStatus,
              updated_at: new Date().toISOString()
            })
            .eq('id', orderId);

          if (error) throw error;

          el.dataset.currentStatus = newStatus;
          
          // Mostrar notificaciÃ³n
          const toast = document.createElement('div');
          toast.className = 'fixed bottom-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
          toast.textContent = 'Estado actualizado correctamente';
          document.body.appendChild(toast);
          setTimeout(() => toast.remove(), 3000);

        } catch (err: any) {
          console.error('Error updating order:', err);
          alert('Error al actualizar: ' + err.message);
          el.value = currentStatus!;
        }
      });
    });
  </script>
</Layout>
